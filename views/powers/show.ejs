<header>
    <h1><%= powers.type %> Power</h1>
</header>  

<main class="power-show">
    <div class="hero-info">
        <ul>
            <li>Power Type: <%= powers.type %> </li>
            <li>Description: <%= powers.description %> </li>
        </ul>
    </div>
    <br>
    <section>
        <a class="power-edit" href="/powers/<%= powers._id %>/edit ">Edit Power</a>
   
        <form class="power-delete" action="/powers/<%= powers._id %>?_method=DELETE " method="POST">
            <input type="submit" value="Delete Power">
        </form>
        
    </section>

</main>