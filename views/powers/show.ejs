<header>
    <h1><%= powers.type %> Power</h1>
</header>  

<nav>
    <ul>
        <li>
            <a href="/superheroes/gallery">View Superhero Gallery</a>
        </li>

        <li>
            <a href="/superheroes/new">Create New Superhero</a>
        </li>
    </ul>
</nav>

<main>
    <section>
        <h2>Power Info:</h2>
            <ul>
                <li>Power Type: <%= powers.type %> </li>
                <li>Description: <%= powers.description %> </li>
            </ul>
    </section>

    <section>
        <a href="/powers/<%= powers._id %>/edit ">Edit Power</a>
    </section>

    <section>
        <form action="/powers/<%= powers._id %>?_method=DELETE " method="POST">
            <input type="submit" value="Delete Power">
        </form>
    </section>

    <section>
        Power belongs to: <a href="/superheroes/<%= superheroes._id %>"><%= superheroes.name %></a>
    </section>

</main>